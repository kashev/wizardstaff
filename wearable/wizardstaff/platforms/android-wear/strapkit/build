#!/bin/bash

CURRENT_DIR=$(cd "$( dirname "$0" )" && pwd -P)
PROJECT_DIR=$(dirname $(dirname $(dirname $(cd "$( dirname "$0" )" && pwd -P))))
PROJECT_NAME=$( basename $(pwd -P))
echo $PROJECT_DIR

SAMPLE_DIR="$PROJECT_DIR/platform/android-wear/$PROJECT_NAME"
OUTPUT_DIR="$PROJECT_DIR/platform/android-wear/$PROJECT_NAME/build/android-wear"

mkdir -p $OUTPUT_DIR

APP_FILE="$0"
if [ "$1" == "" ];then
    APP_FILE="app.js"
fi
cp $PROJECT_DIR/js/$APP_FILE $SAMPLE_DIR/mobile/src/main/assets/app.js
mkdir -p $CURRENT_DIR/../libraries/assets/
cp $CURRENT_DIR/../../../js/$APP_FILE $CURRENT_DIR/../libraries/assets/app.js
cd $SAMPLE_DIR

./gradlew assembleDebug
cp $SAMPLE_DIR/mobile/build/outputs/apk/mobile-debug.apk $OUTPUT_DIR/
cp $SAMPLE_DIR/wear/build/outputs/apk/wear-debug.apk $OUTPUT_DIR/
